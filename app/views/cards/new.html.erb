<%= form_with  url: cards_path, id: 'charge-form', class: 'card-form',local: true do |f| %>

<div class="Cardpage">
  
  <div class='form-wrap'>
    <%= f.label :number, "【カード番号】", class:"label" %>
    <%= f.text_field :number, class:"number-textarea", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
  </div>
  <div class='form-wrap'>
    <%= f.label :cvc ,"【ＣＶＣ】", class:"label" %>
    <%= f.text_field :cvc, class:"cvc-textarea", placeholder:"カード背面にある3桁の番号", maxlength:"4" %>
  </div>
  <div class='form-wrap'>
  <br>
    <p class="label">【有効期限】</p>
    <div class='input-expiration-date-wrap'>
      <%= f.select :exp_month, 1..12, {include_blank: "---"}, class: "select-box" %>
      <p class="label">月</p>
      <%= f.select :exp_year, 20..25, {include_blank: "---"}, class: "select-box" %>
      <p class="label">年</p>
    </div>
  </div>
  <%= f.submit "登録する" , class:"submit-btn" %>
<% end %>
</div>

</div>

<%= render "shared/footer" %>